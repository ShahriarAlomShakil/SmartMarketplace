{
  "name": "smart-marketplace-backend",
  "version": "1.0.0",
  "description": "Backend API for Smart Marketplace with AI-powered negotiation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "db:setup": "node src/utils/setup-database.js --migrate --seed",
    "db:migrate": "node src/utils/setup-database.js --migrate --no-seed",
    "db:seed": "node src/utils/setup-database.js --no-migrate --seed",
    "db:reset": "node src/utils/setup-database.js --clear --migrate --seed",
    "db:clear": "node src/utils/setup-database.js --clear",
    "db:indexes": "node -e \"const IndexOptimizer = require('./src/utils/indexOptimizer'); const connectDB = require('./src/config/database'); (async () => { await connectDB(); const optimizer = new IndexOptimizer(); await optimizer.createOptimizedIndexes(); process.exit(0); })();\"",
    "db:stats": "node -e \"const IndexOptimizer = require('./src/utils/indexOptimizer'); const connectDB = require('./src/config/database'); (async () => { await connectDB(); const optimizer = new IndexOptimizer(); await optimizer.getDatabaseStats(); await optimizer.analyzeIndexUsage(); process.exit(0); })();\"",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "build": "echo 'Backend build completed'",
    "docker:build": "docker build -t smart-marketplace-backend .",
    "docker:run": "docker run -p 5000:5000 smart-marketplace-backend"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "marketplace",
    "ai",
    "negotiation",
    "gemini",
    "express",
    "mongodb"
  ],
  "author": "Smart Marketplace Team",
  "license": "MIT"
}
